<div class='container '>
    <img class="d-flex ml-auto mr-auto" src="/asset/image/burgericon.png" alt="burger"/>
    <h1 class= "text-center">Burgers!</h1>


    <div class="row">
        <div class='col-md-6'>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <buttonn class="change-devoured" data-id="{{this.id}}">devour it!</buttonn>
                </li>
                {{/unless}}
                {{/each}}
            </ul>


        </div>

        <div class='col-md-6'>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <div class="text-center">

        <h2>Add a Burger</h2>
        <form class="create-form d-flex justify-content-center">
            <div class="row">
                <div class="form-group">
